@page "/reservations/edit/{Id:int}"

@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Editar Reserva</h3>

@if (currentReservation is null)
{
    <p>Cargando...</p>
}
else
{
    <ReservationsForm Reservation="currentReservation" OnSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Reservation currentReservation;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHttp = await repository.GetAsync<Reservation>($"api/reservations/{Id}");
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessage();
            await sweetAlertService.FireAsync("Error", message, "error");
            navigationManager.NavigateTo("/reservations");
            return;
        }

        currentReservation = responseHttp.Response;
    }

    private async Task Edit()
    {
        var responseHttp = await repository.PutAsync("/api/reservations", currentReservation);
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessage();
            await sweetAlertService.FireAsync("Error", message, "error");
            return;
        }

        await sweetAlertService.FireAsync("Éxito", "Reserva actualizada correctamente", "success");
        navigationManager.NavigateTo("/reservations");
    }

    private void Return()
    {
        navigationManager.NavigateTo("/reservations");
    }
}
