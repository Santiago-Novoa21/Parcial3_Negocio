@page "/resources/edit/{Id:int}"

@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Editar Recurso</h3>

@if (currentResource is null)
{
    <p>Cargando...</p>
}
else
{
    <ResourcesForm Resource="currentResource" OnSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Resource currentResource;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHttp = await repository.GetAsync<Resource>($"api/resources/{Id}");
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessage();
            await sweetAlertService.FireAsync("Error", message, "error");
            navigationManager.NavigateTo("/resources");
            return;
        }

        currentResource = responseHttp.Response;
    }

    private async Task Edit()
    {
        var responseHttp = await repository.PutAsync("/api/resources", currentResource);
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessage();
            await sweetAlertService.FireAsync("Error", message, "error");
            return;
        }

        await sweetAlertService.FireAsync("Éxito", "Recurso actualizado correctamente", "success");
        navigationManager.NavigateTo("/resources");
    }

    private void Return()
    {
        navigationManager.NavigateTo("/resources");
    }
}
